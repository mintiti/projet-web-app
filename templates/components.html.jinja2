{% macro create_content_block(products) %}
    <div class="d-flex row">
    {% for _ in products %}
        {% if products|length >=3 %}
            {{ create_product_row(products) }}
        {% endif %}
    {% endfor %}

        {% for product in products %}
            {{ create_product_card(product) }}
        {% endfor %}

    </div>
{% endmacro %}

