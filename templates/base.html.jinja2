{% from "components.html.jinja2" import create_cart_view, create_product_card, create_product_row, create_content_block, create_menu_card, create_menu_view %}

{% set navigation_bar = [
    ( 'menus' , 'Menus'),
    ( 'sandwichs' , 'Sandwichs'),
    ( 'desserts' , 'Desserts'),
    ('boissons', 'Boissons'),
    ] -%}
{% set active_page = active_page|default('home') -%}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href={{ url_for('.static', filename = 'css/bootstrap.css') }}>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <!-- Include Font Awesome Stylesheet in Header -->
    <script src="https://kit.fontawesome.com/67ed166f8f.js" crossorigin="anonymous"></script>

    <!-- Our styling -->

    <link rel="stylesheet" href={{ url_for('.static', filename = 'css/style.css') }}>

    <title>MySandwich - Réservation</title>
</head>
<body>
<!-- Start navbar -->
<nav class="navbar navbar-dark bg-dark navbar-expand-lg fixed-top">

    <a class="navbar-brand order-lg-0 order-7" href={{ url_for("home") }}><span id="brand">MySandwich</span></a>
    <btn type="button" class="btn btn-light order-lg-12 order-0" data-toggle="modal" data-target="#cart"><i
            class="fas fa-shopping-cart"></i></btn>

    <button class="navbar-toggler order-lg-1 order-last" type="button" data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
            {% for id, caption in navigation_bar %}
                <li{% if id == active_page %}
                    class="nav-item active"
                {% else %} class="nav-item" {% endif %}>
                    <a class="nav-link" href={{ url_for(id) }}>{{ caption }}</a>
                </li>

            {% endfor %}
        </ul>


    </div>


</nav>
<!-- End navbar -->
<!-- Start cart view -->
<div class="modal fade" id="cart" tabindex="-1" role="dialog" aria-labelledby="cart" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white" id="VotrePanier"><i
                        class="fas fa-shopping-cart"></i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ create_cart_view(cart) }}
            </div>

            <div class="modal-footer">
                <a href={{ url_for("validate", order_id = 1) }} class="btn btn-success">Confirmer la commande</a>
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Continuer mes achats</button>
            </div>
        </div>
    </div>
</div>
<!-- End cart view -->


{% if active_page == "home" %}
    <div class="view">
        <!-- Mask & flexbox options-->
        <div class="mask centered">
            <!-- Content -->
            <div class="container" id="welcome">
                <!--Grid row-->
                <div class="h-100 row">
                    <!--Grid column-->
                    <div class="col-md-12 white-text text-center mt-xl-3 mb-4 text-white">
                        <h1 class="h1-responsive font-weight-bold mb-sm-3">Bienvenue chez <em>MySandwich</em></h1>
                        <hr id="welcome-separator">
                        <h6>Réservez dès maintenant votre sandwich !
                        </h6>

                        <div class="row justify-content-center mt-3">
                            <button class="btn btn-primary mx-1"
                                    onclick="window.location.href = '{{ url_for("menus") }}';">
                                Menus
                            </button>
                            <div class="dropdown mx-1">
                                <button class="btn btn-outline-light dropdown-toggle" type="button"
                                        id="dropdownMenuButton"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">À la carte
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="{{ url_for("sandwichs") }}">Sandwich</a>
                                    <a class="dropdown-item" href="{{ url_for("boissons") }}">Boissons</a>
                                    <a class="dropdown-item" href="{{ url_for("desserts") }}">Desserts</a>
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
                <!--Grid row-->
            </div>
            <!-- Content -->
        </div>
        <!-- Mask & flexbox options-->
    </div>
    <!-- Full Page Intro -->
    </header>
{% endif %}
<div class="container mt-5">
    {% block content %}

    {% endblock %}
</div>
<div class="container-fluid" id="social-footer">
    <hr>
    <div class="text-center center-block">
        <br/>
        <a href="https://www.facebook.com/Mintiti"><i id="social-fb"
                                                      class="fab fa-facebook-square fa-3x social"></i></a>
        <a href="https://twitter.com/Mintiti"><i id="social-tw" class="fab fa-twitter-square fa-3x social"></i></a>
        <a href="mailto:ngoc-minh-tri.truong@imt-atlantique.net"><i id="social-em"
                                                                    class="fas fa-envelope-square fa-3x social"></i></a>
        <a href="https://www.instagram.com/mintiti/"><i id="social-ig"
                                                        class="fab fa-instagram-square fa-3x social"></i></a>
    </div>
</div>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>
</html>